@using Do_An_Web.Models
@{
    ViewBag.Title = "KetQuaTimKiem";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}

@model IEnumerable<SanPham>

<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- ASIDE -->
            <div id="aside" class="col-md-3">
             
                <div class="aside">
                    <h3 class="aside-title">Sản Phẩm Mới</h3>
                    @foreach (var item in ViewBag.SanPhamMoi)
                    {
                        <div class="product-widget">
                            <div class="product-img">
                                <img src="~/Content/Layout/img/@item.HinhAnh" alt="">
                            </div>
                            <div class="product-body">
                                <p class="product-category">@item.LoaiSanPham.TenLoai</p>
                                <h3 class="product-name"><a href="#">@item.TenSP</a></h3>
                                <h4 class="product-price">@string.Format("{0:0,0 VNĐ}", item.GiaBan) <del class="product-old-price">@string.Format("{0:0,0 VNĐ}", (item.GiaBan)*3/2)</del></h4>
                            </div>
                        </div>
                    }
                </div>
                <!-- /aside Widget -->
            </div>
            <div id="store" class="col-md-9">
               
                <div class="row">
                    @foreach (var item in Model)
                    {
                        int dem = 1;
                        <a href=@Url.Action("XemChiTiet", "SanPham", new { id = item.MaSP })>
                            <div class="col-md-4 col-xs-6">
                                <div class="product">
                                    <div class="product-img">
                                        <img src="~/Content/Layout/img/@item.HinhAnh" width="100" height="250" alt="">
                                    </div>
                                    <div class="product-body">
                                        <p class="product-category">@item.LoaiSanPham.TenLoai</p>
                                        <h3 class="product-name"><a href="#">@item.TenSP</a></h3>
                                        <h4 class="product-price">@string.Format("{0:0,0 VNĐ}", item.GiaBan) <del class="product-old-price">@string.Format("{0:0,0 VNĐ}", (item.GiaBan * 3) / 2)</del></h4>
                                        <div class="product-rating">
                                        </div>
                                        <div class="product-btns">
                                            <button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">Yêu thích</span></button>
                                            <button class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">So Sánh</span></button>
                                            <button class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">Xem Chi Tiết</span></button>
                                        </div>
                                    </div>
                                    <div class="add-to-cart">
                                        <button class="add-to-cart-btn">
                                            <i class="fa fa-shopping-cart"></i>
                                            @Ajax.ActionLink("Thêm Vào Giỏ Hàng", "ThemGioHang", "GioHang", new { @MaSp = item.MaSP }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "divGioHang", InsertionMode = InsertionMode.Replace }, null)
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </a>
                        if (dem % 3 == 0)
                        {
                            <div class="clearfix visible-lg visible-md visible-sm visible-xs"></div>
                        }

                        dem++;
                    }
                </div>
                <!-- /store products -->
                <!-- store bottom filter -->
                <div class="store-filter clearfix">
                    <span class="store-qty">Showing 20-100 products</span>
                    <ul class="store-pagination">
                        <li class="active">1</li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
                    </ul>
                </div>
                <!-- /store bottom filter -->
            </div>
            <!-- /STORE -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /product -->
@*<div class="clearfix visible-lg visible-md"></div>*@


