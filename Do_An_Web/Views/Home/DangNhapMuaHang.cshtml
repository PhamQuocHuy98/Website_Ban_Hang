<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V15</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/LayoutDangNhap/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LayoutDangNhap/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LayoutDangNhap/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LayoutDangNhap/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LayoutDangNhap/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LayoutDangNhap/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LayoutDangNhap/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LayoutDangNhap/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LayoutDangNhap/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LayoutDangNhap/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/LayoutDangNhap/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-form-title" style="background-image: url(images/bg-01.jpg);">
                    <span class="login100-form-title-1">
                        Đăng Nhập
                    </span>
                </div>
                @using (Html.BeginForm())
                {
                <div class="login100-form validate-form">
                    <div class="wrap-input100 validate-input m-b-26" data-validate="Username is required">
                        <span class="label-input100">Tài Khoản</span>
                        <input class="input100" type="text" name="taikhoan" placeholder="Tài khoản">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 validate-input m-b-18" data-validate="Password is required">
                        <span class="label-input100">Mật Khẩu</span>
                        <input class="input100" type="password" name="matkhau" placeholder="Mật khẩu">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="flex-sb-m w-full p-b-30">
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                            <label class="label-checkbox100" for="ckb1">
                                Nhớ mật khẩu
                            </label>
                        </div>
                        <div>
                            <a href="#" class="txt1">
                                Quên mật khẩu
                            </a>
                        </div>
                    </div>
                    <div class="container-login100-form-btn">

                        <button class="login100-form-btn" type="submit">
                            Đăng Nhập
                        </button>
                        <div style="width :10px"></div>
                        <button class="login100-form-btn">
                            @Html.ActionLink("Đăng Ký","DangKy","Home")
                        </button>
                    </div>
                    
                </div>
                }
            </div>
        </div>
    </div>

    <!--===============================================================================================-->
    <script src="~/Content/LayoutDangNhap/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LayoutDangNhap/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LayoutDangNhap/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/LayoutDangNhap/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LayoutDangNhap/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LayoutDangNhap/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Content/LayoutDangNhap/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LayoutDangNhap/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LayoutDangNhap/js/main.js"></script>

</body>
</html>