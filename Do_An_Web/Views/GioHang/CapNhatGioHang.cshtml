@using Do_An_Web.Models
@model ItemGioHang
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Layout/HomeLayout.cshtml";


   // <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

}
@{ 
    List<ItemGioHang> lstGioHang = ViewBag.GioHang as List<ItemGioHang>;
}
<table class="table">
    <tr style="background-color:lightgrey ;color:black;font-weight:bold">
        <th>
            Tên Sản Phẩm
        </th>
        <th>
            Số Lượng
        </th>
        <th>
            Đơn Giá
        </th>
        <th>
            Hình Ảnh
        </th>
        <th>
            Thành Tiền
        </th>
        <th></th>
    </tr>

    @foreach (var item in lstGioHang)
    {
        // chỉnh sửa từ bên trong trang xem giỏ hàng
        if (item.MaSP == Model.MaSP)
        {
            using (Html.BeginForm("CapNhatGioHang", "GioHang"))
            {
                <tr>
                    @Html.Hidden("MaSP", item.MaSP)
                 
                    <td>
                        @Html.DisplayFor(modelItem => item.TenSP)
                    </td>

                    <td>
                        @Html.TextBox("SoLuong", item.SoLuong)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonGia)
                    </td>
                    <td>
                        <img src="~/Content/Layout/img/@item.HinhAnh" width="50" height="50" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ThanhTien)
                    </td>
                    <td>
                        <button type="submit">Cập Nhật</button>
                    </td>
                </tr>
            }

        }
        else
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenSP)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonGia)
                </td>
                <td>
                    <img src="~/Content/Layout/img/@item.HinhAnh" width="50" height="50" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThanhTien)
                </td>
                <td>
                    @Html.ActionLink("Chỉnh sửa", "CapNhatGioHang",new { @MaSp = item.MaSP }) |

                    @Html.ActionLink("Xóa", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }

    }

</table>


