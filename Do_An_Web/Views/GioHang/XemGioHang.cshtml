@model IEnumerable<Do_An_Web.Models.ItemGioHang>

@{

    Layout = "~/Views/Layout/HomeLayout.cshtml";
   
    
}
<table class="table">
    <tr style="background-color:lightgrey ;color:black;font-weight:bold">
        <th>
            Tên Sản Phẩm
        </th>
        <th>
            Số Lượng
        </th>
        <th>
            Đơn Giá
        </th>
        <th>
            Hình Ảnh
        </th>
        <th>
            Thành Tiền
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @Html.HiddenFor(model => item.MaSP)
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>
            <td>
                <img src="~/Content/Layout/img/@item.HinhAnh" width="50" height="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThanhTien)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "CapNhatGioHang", new { @MaSP = item.MaSP }) |

                @Html.ActionLink("Xóa", "XoaGioHang", new { @MaSP = item.MaSP })
            </td>
        </tr>
    }

</table>
<div style="text-align:center">
    @using (Html.BeginForm("DatHang", "GioHang"))
    {
        <input class="btn btn-primary" type="submit" value="Đặt hàng" />
        @Html.ActionLink("Mua tiếp", "Index", "Home", null, new { @class = "btn btn-success" })
    }
   
</div>

