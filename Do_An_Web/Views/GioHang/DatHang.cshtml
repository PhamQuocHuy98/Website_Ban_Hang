        <script src="https://www.paypal.com/sdk/js?client-id=AdSLRsSBmRTP5-VukeXGIVBL3YGpbESTZKpnn1DHtxesXbk2qAq4SwF8SBh3eJIFYgUJdMemVcomxcA3"></script>
        <script>
            paypal.Buttons().render('#paypal-button-container');
        </script>*@
                <div class="payment-method">
                    <a href=" @Url.Action("PaymentWithPaypal", "GioHang")"class="primary-btn order-submit"> Thanh Toán Với Paypal
                       
                    </a>
                </div>
                
                
            </div>

            <!-- /Order Details -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>





